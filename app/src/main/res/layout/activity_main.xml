<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bngoogle"
        android:layout_width="190dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/bnyoutube"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.773"
        app:srcCompat="@drawable/google"
        tools:layout_editor_absoluteX="105dp" />

    <ImageButton
        android:id="@+id/bnyoutube"
        android:layout_width="184dp"
        android:layout_height="53dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/bnwhatsapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/youtube" />

    <ImageButton
        android:id="@+id/bnwhatsapp"
        android:layout_width="186dp"
        android:layout_height="52dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/bnfacebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/whatsapp" />

    <ImageButton
        android:id="@+id/bnfacebook"
        android:layout_width="202dp"
        android:layout_height="55dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/facebook" />

</androidx.constraintlayout.widget.ConstraintLayout>